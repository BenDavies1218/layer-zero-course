{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./courses/**/*.ts",
    "./deploy/**/*.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
